<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#304ffe"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@mipmap/emblem_asset_foreground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="@string/main_menu"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:gravity="center"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingBottom="16dp"
                    android:text="@string/first_nameid"
                    android:textSize="32sp" />


                <TextView
                    android:id="@+id/email_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:drawableRightCompat="@drawable/content_copy" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="@string/tv_student"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_groupId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:text="@string/groupid"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_add_group"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/btn_add_group" />

            <Button
                android:id="@+id/btn_edit_group"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_edit_group" />

            <Button
                android:id="@+id/btn_delete_group"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_delete_group" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sсhedule"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_gradient"
                android:text="@string/btn_schedule" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_mark"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_gradient"
                android:text="@string/btn_mark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_journal"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_gradient"
                android:text="@string/btn_journal" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_option"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_gradient"
                android:text="@string/btn_option" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_leave"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_gradient"
                android:text="@string/btn_leave" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>