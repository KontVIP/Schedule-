<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JournalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#304ffe"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@mipmap/emblem_asset_foreground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="@string/tv_journal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:id="@+id/first"
            android:text="@string/number_first"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_nameid"
            android:textSize="20sp"
            android:textColor="@color/black"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_second"
                android:text="@string/number_second"
                android:padding="4dp"/>
            <TextView
            android:id="@+id/tv_name_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_nameid"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_third"
                android:text="@string/number_third"
                android:padding="4dp"
                />
        <TextView
            android:id="@+id/tv_name_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_nameid"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border">
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/tv_fourth"
     android:text="@string/number_fourth"
     android:padding="4dp"
     />
        <TextView
            android:id="@+id/tv_name_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_nameid"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fifth"
            android:text="@string/number_fifth"
            android:padding="4dp"
            />
            <TextView
            android:id="@+id/tv_name_fifth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_nameid"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>